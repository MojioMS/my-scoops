{
    "homepage": "https://zookeeper.apache.org/",
    "description": "High-performance coordination service for distributed applications",
    "version": "3.4.13",
    "license": "Apache-2.0",
    "url": "https://www.apache.org/dyn/closer.cgi?action=download&filename=zookeeper/zookeeper-3.4.13/zookeeper-3.4.13.tar.gz",
    "hash": "sha1:a989b527f3f990d471e6d47ee410e57d8be7620b",
    "extract_dir": "zookeeper-3.4.13",
    "bin": [
        [
            "bin\\zkServer.cmd",
            "zkServer"
        ]
    ],
    "persist": [
        "data"
    ],
    "post_install": [
        "Add-Content \"$dir/conf/zoo.cfg\" -Value \"tickTime=2000\"",
        "Add-Content \"$dir/conf/zoo.cfg\" -Value \"initLimit=10\"",
        "Add-Content \"$dir/conf/zoo.cfg\" -Value \"syncLimit=5\"",
        "Add-Content \"$dir/conf/zoo.cfg\" -Value \"dataDir=$persist_dir/data\"",
        "Add-Content \"$dir/conf/zoo.cfg\" -Value \"clientPort=2181\""
    ],
    "checkver": {
        "url": "https://www.apache.org/dist/zookeeper/",
        "re": "zookeeper-([\\d.]+)/",
        "reverse": true
    },
    "autoupdate": {
        "url": "https://www.apache.org/dyn/closer.cgi?action=download&filename=zookeeper/zookeeper-$version/zookeeper-$version.tar.gz",
        "hash": {
            "url": "https://www.apache.org/dist/zookeeper/zookeeper-$version/zookeeper-$version.tar.gz.sha1",
            "find": "(\\w+) "
        },
        "extract_dir": "zookeeper-$version"
    }
}
